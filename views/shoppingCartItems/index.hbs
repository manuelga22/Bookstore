{{!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> --}}
<div class="pt-3">

    {{#if msg}}
    <div class="alert alert-success" role="alert">
         {{msg}}
    </div>
    {{/if}}
  


    <div class=" d-flex justify-content-center">
        <h2>Shopping Cart</h2>
    </div>

    {{!-- SHOPPING CART --}}
    <div class="pt-3 d-flex flex-wrap justify-content-around ">
        <div class="">

            {{#if shopping_items}}
            {{#each shopping_items}}
             <div class="card">
                 <div class="p-0 card-body d-flex flex-wrap justify-content-center justify-content-md-between">

                     <div class="book-cover-wrapper d-flex  justify-content-sm-center  justify-content-lg-none">
                            <img src="{{coverUrl}}" alt="book cover">   
                     </div>
                      <div class="p-3 d-flex flex-grow-1 flex-wrap justify-content-around">
                                <div class="d-flex flex-grow-1 flex-column align-items-center justify-content-center">
                                    <h5 class="card-title">{{title}}</h5>
                                    <p class="card-text">Price: {{price}}$</p>
                                </div>
                                <div class="d-flex  align-items-center align-items-md-none">
                                    {{!-- Toggle --}}
                                    <span class ="" id="quantitySpan{{id}}">x{{quantity}}</span>
                                    <button class="btn btn-link editBtn" id="editBtn{{id}}"  data-request="edit" data-action="/edit/{{id}}">Edit</button>
                                    {{!-- Toggle --}}
                                    <form  id="edit-form-shoppingcart" method="post" action="/edit/{{id}}" style="display:none">
                                        <input type="number" class="count " name="qty" value="{{quantity}}" min="1" > 
                                        <button type="submit">submit</button>      
                                    </form>
                                    <button class="btn btn-link editBtn"  data-request="edit" data-action="/edit/{{id}}" style="display:none">Cancel</button>
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-request="delete" data-action="/delete/{{id}}">Delete</button>
                                    {{!-- <button type="submit" class="add-to-save-for-later btn btn-primary" data-bookid="{{bookId}}" >YES!</button> --}} 

                               </div>
                      </div>
                </div>
            </div>
            {{/each}}
            {{else}}
                <div class="d-flex flex-wrap justify-content-around">
                    <h3>No items found in your shopping cart</h3>
                </div>
            {{/if}}
        </div>


        <div class="checkout-total-shoppingcart ">
            <div class="container d-flex flex-column align-items-center">
                <div class="row">
                    <h3>Checkout Total:</h3>
                </div>
                {{#if shopping_items}}
                <div class="row checkout-list">
                   {{#each shopping_items}}
                      <span><p>--{{title}} x{{quantity}}</p></span>
                   {{/each}}
                </div>
                {{/if}}
                <div class="price row">
                    <span>
                        <b>Total Price: {{totalCheckoutPrice}}</b>
                    </span>
                </div>
                <div class="row">
                    <button class="btn">Checkout</button>
                </div>
            </div>
        </div>

    </div>

    {{!-- SAVED FOR LATER  --}}
    {{#if saved_for_later_items}}
    <div class="row pt-3  justify-content-center">
        <h2>Saved for later</h2>
    </div>
    {{/if}}
    <div class="pt-3 ">
    
            {{#if saved_for_later_items}}
            {{#each saved_for_later_items}}
              <div class="card">
                 <div class="p-0 card-body d-flex flex-wrap justify-content-center justify-content-md-between">

                     <div class="book-cover-wrapper d-flex  justify-content-sm-center  justify-content-lg-none">
                            <img src="{{coverUrl}}" alt="book cover">   
                     </div>
                      <div class="p-3 d-flex flex-grow-1 flex-wrap justify-content-around">
                                <div class="d-flex flex-grow-1 flex-column align-items-center justify-content-center">
                                    <h5 class="card-title">{{title}}</h5>
                                    <p class="card-text">Price: {{price}}$</p>
                                </div>
                                <div class="d-flex  align-items-center align-items-md-none">
                                    <button  class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-request="delete" data-action="/deleteSaveForLater/{{id}}">Delete</button>
                               </div>
                      </div>
                </div>
            </div>
            {{/each}}
            {{else}}
                <div class="d-flex flex-wrap justify-content-around">
                    <h3>No items Saved for Later</h3>
                </div>
            {{/if}}
    
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form  class="modal-form-request" method="post" action="">
             <button type="submit" class="btn btn-primary">YES!</button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>

    .book-cover-wrapper>*{
        max-height: 250px !important;
    }
    .checkout-list{
       box-shadow: 5px;
       padding:0.5em;
    }
    .checkout-total-shoppingcart{
        padding: 1em;
        border: solid #CB6363 2px;
        border-radius: 2em;
    }
    .checkout-total-shoppingcart>div>*{
        margin-bottom:0.5em;
    }
</style>

<script src="/js/shopingcart.js"></script>