<div class="container pt-3">


    <div class="row ">
        <h2>Shopping Cart</h2>
    </div>


    <div class="row pt-3">
        <div class="col-8">

            {{#each shopping_items}}
            <div class="row card mb-3">
                <div class="row g-0">
                    <div class="col-md-2 col-lg-2 col-sm-2 ">
                        <img src="..." alt="">
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-8"><h5 class="card-title">{{title}}</h5>
                                <p class="card-text">Price: {{price}}$</p></div>
                                <div class="col-4">
                                    <form type="submit" method= "POST" action="/EDIT/{{id}}">
                                       <div class="row">
                                         <input type="number" class="count col" name="qty" value="{{quantity}}" min="1" >
                                         <button class="btn col">Edit</button>
                                       </div>
                                    </form>
                                </div>
                            </div>
                        
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
        <div class="col-4">
            <div class="container">
                <div class="price row">
                    <span>
                        <b>Total Price: {{totalCheckoutPrice}}</b>
                    </span>
                </div>
                <div class="row">
                    <button class="btn">Checkout</button>
                </div>
            </div>
        </div>
    </div>








</div>