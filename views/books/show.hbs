<!-- About Book Section  -->
    <section id="about">
    <div class="container">
        <div class="row">
            <img class="img-fluid" id="myImg"src="{{book.coverUrl}}" width="340" height="200">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <h3><u>{{book.title}}</u></h3>
            <p>{{book.description}}</p>
            <div class="about-profile">
                <ul class="details">
                    <li> <b>Author Name    : </b> <a href="#">{{book.Author.name}}</a></li>
                    <li> <b>Author Bio     : </b> {{book.Author.bio}}</li>
                    <li> <b>Book Genre     : </b> {{book.genre}}</li>
                    <li> <b>Publisher Name : </b> {{book.publisher}}</li>
                    <li> <b>Release Date   : </b> {{book.releaseDate}}</li>
                    <li> <b>Book Ratings   : </b> PLACEHOLDER STAR ICON</li>
                    <li> <b>Book Comments  : </b> <a href="#"></a>See all comments</a></li>
                </ul>
            <a href="#" class="btn btn-warning"> Add to Wishlist</a>
            <a href="#" class="btn btn-danger"> Add to cart</a>
            </div>
        </div>   
        </div>
    </div>
    </section>


<!-- The Modal -->
<div id="myModal" class="modal">

<!-- The Close Button -->
<span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span>

<!-- Modal Content (The Image) -->
<img class="modal-content" id="img01">

<!-- Modal Caption (Image Text) -->
<div id="caption"></div>
</div>

<script>
// Get the modal
var modal = document.getElementById('myModal');

// Get the image and insert it inside the modal - use its "alt" text as a caption
var img = document.getElementById('myImg');
var modalImg = document.getElementById("img01");
var captionText = document.getElementById("caption");
img.onclick = function(){
    modal.style.display = "block";
    modalImg.src = this.src;
    modalImg.alt = this.alt;
    captionText.innerHTML = this.alt;
}

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on <span> (x), close the modal
span.onclick = function() { 
    modal.style.display = "none";
}
</script>